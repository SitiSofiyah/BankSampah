            <Button
                android:id="@+id/update"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/red"
                android:text="EDIT "

                android:textColor="@color/white" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>